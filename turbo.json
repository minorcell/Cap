{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": [".env"],
	"globalEnv": ["*"],
	"tasks": {
		"build": {
			"inputs": [
				"**/*.ts",
				"**/*.tsx",
				"**/*.js",
				"**/*.jsx",
				"**/*.mjs",
				"**/*.cjs",
				"!src-tauri/**",
				"!node_modules/**"
			],
			"outputs": [".output/**", "dist/**"]
		},
		"lint": {
			"cache": false
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"test": {
			"inputs": ["**/*.ts", "**/*.tsx", "!node_modules/**"],
			"cache": false
		}
	}
}
