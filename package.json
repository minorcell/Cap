{
 "type": "module",
 "scripts": {
    "build": "dotenv -e .env -- turbo run build --filter @cap/desktop",
    "cap-setup": "dotenv -e .env -- node scripts/setup.js",
    "dev": "pnpm --filter @cap/desktop dev",
    "dev:desktop": "pnpm --filter @cap/desktop dev",
    "env-setup": "node scripts/env-cli.js",
    "format": "pnpm exec biome check --write",
    "lint": "pnpm exec biome lint",
    "tauri:build": "dotenv -e .env -- pnpm --dir apps/desktop tauri build --verbose",
    "typecheck": "pnpm tsc -b",
    "test": "turbo run test --filter @cap/desktop",
    "check-tauri-versions": "node scripts/check-tauri-plugin-versions.js",
    "clean": "find . -name node_modules -o -name .next -o -name .output -o -name dist -type d -prune | xargs rm -rf",
    "with-env": "dotenv -e .env --"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.0",
    "@clack/prompts": "^0.10.0",
    "@effect/language-service": "^0.44.0",
    "dotenv-cli": "latest",
    "turbo": "^2.3.4",
    "typescript": "^5.8.3"
  },
	"packageManager": "pnpm@10.5.2",
	"name": "cap",
	"engines": {
		"node": ">=20"
	}
}
